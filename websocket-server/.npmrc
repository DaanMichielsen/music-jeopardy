# Force npm to be used instead of pnpm
package-manager=npm

# Ensure dependencies are installed
auto-install-peers=true

# Force npm and avoid workspace detection
engine-strict=false
workspaces=false

# Disable pnpm detection
use-node-version=18

# Explicitly disable pnpm
pnpm=false
yarn=false

# Force npm configuration
registry=https://registry.npmjs.org/ 